        </GridLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Continue button fixed at the bottom -->
    <Button
        android:id="@+id/btnContinue"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_continue_button"
        android:text="Continue"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:backgroundTint="#FF7052"
        app:layout_constraintBottom_toTopOf="@id/bottomIndicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Bottom bar/indicator (optional, for iOS-style look) -->
    <View
        android:id="@+id/bottomIndicator"
        android:layout_width="120dp"
        android:layout_height="6dp"
        android:layout_marginBottom="16dp"
        android:alpha="0.08"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

