<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/coral</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/coral</item>
    </style>

    <!-- Custom style for minimalist input fields -->
    <style name="MinimalistInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">@color/light_gray</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/hint_color</item>
    </style>
</resources>